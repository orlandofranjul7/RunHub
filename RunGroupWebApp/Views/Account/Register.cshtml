﻿@using RunGroupWebApp.ViewModels
@model RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<section class="vh-100 bg-image"
         style="background-image: url('https://mdbcdn.b-cdn.net/img/Photos/new-templates/search-box/img5.webp');">
    <div class="mask d-flex align-items-center h-100 gradient-custom-3">
        <div class="container h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                    <div class="card" style="border-radius: 15px;">
                        <div class="card-body p-5">
                            <h2 class="text-uppercase text-center mb-5">Crear una cuenta</h2>


                            @if (TempData["Error"] != null)
                            {
                                <div class="col-md-12 alert alert-danger">
                                    <span><b>Sorry!</b> - @TempData["Error"] </span>
                                </div>
                            }

                            <form asp-action="Register" style="width: 23rem;">
                                <h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Registro</h3>
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                <div class="form-group form-outline mb-4">
                                    <label asp-for="EmailAddress" class="control-label form-label"></label>
                                    <input asp-for="EmailAddress" class="form-control form-control form-control-lg" />
                                    <span asp-validation-for="EmailAddress" class="text-danger"></span>
                                </div>
                                <div class="form-group form-outline mb-4">
                                    <label asp-for="Password" class="control-label form-check form-label"></label>
                                    <input asp-for="Password" class="form-control form-control-lg" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="form-group form-outline mb-4">
                                    <label asp-for="ConfirmPassword" class="control-label form-label"></label>
                                    <input asp-for="ConfirmPassword" class="form-control form-control-lg" />
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <input class="btn btn-info btn-lg btn-block" type="submit" value="Sign up" />
                                    <a class="btn btn-outline-secondary" asp-controller="Race" asp-action="Index">Cancelar</a>
                                </div>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>