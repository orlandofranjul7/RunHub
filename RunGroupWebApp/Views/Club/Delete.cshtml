@using RunGroupWebApp.Data.Enum
@model Club

<h1>Esta seguro que desea borrar este registro?</h1>

<form method="post" asp-action="Delete" enctype="multipart/form-data">
	<input type="hidden" value="AddressId" id="AddressId" />
	<div class="form-group">
		<label asp-for="Title">Title</label>
		<input asp-for="Title" class="form-control" placeholder="Title" readonly />
		<span asp-validation-for="Title" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="Description">Descripcion</label>
		<input asp-for="Description" class="form-control" placeholder="Descripcion" readonly />
		<span asp-validation-for="Title" class="text-danger"></span>
		<div class="form-group">
			<label asp-for="ClubCategory">Categoria de club</label>
			<select asp-for="ClubCategory" asp-items="@Html.GetEnumSelectList<ClubCategory>()" class="form-control" readonly></select>
				<option selected="selected" value="">--Select--</option>
			<span asp-validation-for="ClubCategory" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="Address.Street">Calle</label>
			<input asp-for="Address.Street" class="form-control" placeholder="Calle" readonly />
			<span asp-validation-for="Address.Street" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="Address.City">Calle</label>
			<input asp-for="Address.City" class="form-control" placeholder="Ciudad" readonly />
			<span asp-validation-for="Address.City" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="Address.State">Estado</label>
			<input asp-for="Address.State" class="form-control" placeholder="Estado" readonly />
			<span asp-validation-for="Address.State" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="Image">Imagen</label>
			<input asp-for="Image" class="form-control" placeholder="Imagen" readonly />
			<span asp-validation-for="Image" class="text-danger"></span>
		</div>
	</div>
</form>

<div class="form-group">
	<form action="Delete" method="post">
		<input type="hidden" asp-for="Id"/>
		<input type="submit" value="Confirm" class="btn btn-danger float-right mt-3">
	</form>
</div>