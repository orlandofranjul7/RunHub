@{
}

<!-- Page Content -->
<div class="container">

    <!-- Portfolio Item Heading -->
    <h1 class="my-4">
        @Model.Title
        <small>(@Model.Address.Street)</small>
    </h1>

    <!-- Portfolio Item Row -->
    <div class="row">

        <div class="col-md-7">
            <img class="img-fluid" src="@Model.Image" alt="">
        </div>

        <div class="col-md-5">
            <h3 class="my-3">@Model.Title</h3>
            <p>@Model.Description</p>
            <h3 class="my-3">Ubicación</h3>
            <ul>
                <li>@Model.Address.City</li>
                <li>@Model.Address.State</li>
                <li>@Model.Address.Street</li>
            </ul>
        </div>

    </div>

</div>
<!-- /.container -->

