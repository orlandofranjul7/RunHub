@using RunGroupWebApp.Data.Enum;
@using RunGroupWebApp.ViewModels;
@model CreateRaceViewModel

<div class="container mt-4 border p-4">
    <h2 class="mb-4 text-center bg-light p-2">Crear Carrera</h2>

    <form method="post" asp-action="Create" enctype="multipart/form-data" class="mt-3">
        <input type="hidden" id="AppUserId" name="AppUserId" asp-for="AppUserId" />

        <div class="form-group row mb-3">
            <label class="col-sm-2 col-form-label" asp-for="Title">Titulo</label>
            <div class="col-sm-10">
                <input asp-for="Title" class="form-control" placeholder="Ingrese un titulo">
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row mb-3">
            <label class="col-sm-2 col-form-label" asp-for="Description">Descripcion</label>
            <div class="col-sm-10">
                <input asp-for="Description" class="form-control" placeholder="Descripcion">
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row mb-3">
            <label class="col-sm-2 col-form-label" asp-for="RaceCategory">Categoria del club</label>
            <div class="col-sm-10">
                <select asp-for="RaceCategory" class="form-control" asp-items="@Html.GetEnumSelectList<RaceCategory>()">
                    <option>--Selecciona--</option>
                </select>
                <span asp-validation-for="RaceCategory" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row mb-3">
            <label class="col-sm-2 col-form-label" asp-for="Address.Street">Calle</label>
            <div class="col-sm-10">
                <input asp-for="Address.Street" class="form-control" placeholder="Calle">
                <span asp-validation-for="Address.Street" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row mb-3">
            <label class="col-sm-2 col-form-label" asp-for="Address.City">Ciudad</label>
            <div class="col-sm-10">
                <input asp-for="Address.City" class="form-control" placeholder="Ciudad">
                <span asp-validation-for="Address.City" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row mb-3">
            <label class="col-sm-2 col-form-label" asp-for="Address.State">Estado</label>
            <div class="col-sm-10">
                <input asp-for="Address.State" class="form-control" placeholder="Estado">
                <span asp-validation-for="Address.State" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row mb-3">
            <label class="col-sm-2 col-form-label" asp-for="Image">Imagen</label>
            <div class="col-sm-10">
                <input asp-for="Image" type="file" class="form-control-file" placeholder="Imagen">
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-10 offset-sm-2">
                <button type="submit" class="btn btn-primary">Crear</button>
            </div>
        </div>
    </form>
</div>

